;;; core.el --- Thalia Wright's basic configurations

;;; Code

;; Use XDG_CONFIG_DIR if supported


;; Never mix tabs and space
(setq-default indent-tabs-mode nil)

;; GNU C style is ridiculous
(setq c-default-style "k&r"
      c-basic-offset 4)

;; Always follow symlinks
(setq vc-follow-symlinks t)

;; Don't make me type more
(defalias 'yes-or-no-p 'y-or-n-p)

;; Use melpa repositories
(package-initialiation)
(add-to-list 'package-archives '("melpa" . "https://melpa.org/packages"))

;; Put all the backup files in the same place
(setq backup-by-copying t
      backup-directory-alist '((".*" . "~/.config/emacs/backup")))
