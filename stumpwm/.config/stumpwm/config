;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Keybinds

;; (set-prefix-key (kbd "s-x"))

(define-key *root-map* (kbd "e") "emacsclient")
(define-key *root-map* (kbd "SPC") "rofi-desktop-menu")
(define-key *root-map* (kbd "/") "rofi-window-menu")

