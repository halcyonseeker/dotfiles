;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Startup actions

(defun ensure-xsession-loaded ()
  (sh ". ~/.xsession"))

(defun startup-actions ()
  (ensure-xsession-loaded)
  ;; (warm-screen)
  ;; (toggle-mode-line (current-screen) (current-head))
  ;; (start-slynk)
  )

(add-hook *start-hook* 'startup-actions)
